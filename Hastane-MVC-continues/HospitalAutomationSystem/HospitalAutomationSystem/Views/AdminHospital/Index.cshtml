@using EntityLayer.Concrete
@model List<Hospital>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Hastaneler</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Anasayfa</a></li>
                        <li class="breadcrumb-item active">Hastaneler</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Hastanelerin bilgileri aşağıda listelenmektedir.</h3>
                        <h3 style="float:right;"><a href="/AdminHospital/AddHospital/"><button class="btn btn-primary">Yeni Hastane Ekle</button></a></h3>
                    </div>

                    <!-- /.card-header -->
                    <div class="card-body">
                        <table id="example1" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Hastane Adı</th>
                                    <th>Hastane Durumu</th>
                                    <th>Hastanenin Bağlı Oldu İl</th>
                                    <th>Hastanenin Bağlı Oldu İlçe</th>
                                    <th>Güncelle</th>
                                    <th>Sil</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                <tr>
                                    <td>@item.HospitalID</td>
                                    <td>@item.HospitalName</td>
                                    <td>@item.HospitalStatus</td>
                                    <td>@item.District.City.CityName</td>
                                    <td>@item.District.DistrictName</td>
                                    <td><a href="/AdminHospital/UpdateHospital/@item.HospitalID"><button class="btn btn-warning">Güncelle</button></a></td>
                                    <td><a href="/AdminHospital/DeleteHospital/@item.HospitalID"><button class="btn btn-danger">Sil</button></a></td>
                                </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>#</th>
                                    <th>Hastane Adı</th>
                                    <th>Hastane Durumu</th>
                                    <th>Hastanenin Bağlı Oldu İl</th>
                                    <th>Hastanenin Bağlı Oldu İlçe</th>
                                    <th>Güncelle</th>
                                    <th>Sil</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
