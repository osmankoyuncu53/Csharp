@using EntityLayer.Concrete
@model List<Doctor>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Doktorlar</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Anasayfa</a></li>
                        <li class="breadcrumb-item active">Doktorlar</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Doktor bilgileri aşağıda listelenmektedir.</h3>
                        <h3 style="float:right;"><a href="/AdminDoctor/AddDoctor"><button class="btn btn-primary">Yeni Doktor Ekle</button></a></h3>
                    </div>
                    
                    <!-- /.card-header -->
                    <div class="card-body">
                        <table id="example1" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Doktor Adı</th>
                                    <th>Doktor Statüsü</th>
                                    <th>Hastane</th>
                                    <th>Alanı</th>
                                    <th>Güncelle</th>
                                    <th>Sil</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.DoctorID</td>
                                        <td>@item.DoctorName</td>
                                        <td>@item.DoctorStatus</td>
                                        <td>@item.Hospital.HospitalName</td>
                                        <td>@item.Policlinic.PoliclinicName</td>
                                        <td><a href="/AdminDoctor/UpdateDoctor/@item.DoctorID"><button class="btn btn-warning">Güncelle</button></a></td>
                                        <td><a href="/AdminDoctor/DeleteDoctor/@item.DoctorID"><button class="btn btn-danger">Sil</button></a></td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>#</th>
                                    <th>Doktor Adı</th>
                                    <th>Doktor Statüsü</th>
                                    <th>Hastane</th>
                                    <th>Alanı</th>
                                    <th>Güncelle</th>
                                    <th>Sil</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
