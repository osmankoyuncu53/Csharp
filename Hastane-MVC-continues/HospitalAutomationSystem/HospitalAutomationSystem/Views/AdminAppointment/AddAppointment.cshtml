@model EntityLayer.Concrete.Appointment
@{
    ViewBag.Title = "AddAppointment";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Randevu Ekle</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Anasayfa</a></li>
                        <li class="breadcrumb-item active">Randevu Ekle</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <!-- left column -->
                <div class="col-md-12">
                    <!-- jquery validation -->
                    <div class="card card-primary">
                        <div class="card-header">
                            <h3 class="card-title">Randevu Ekle <small></small></h3>
                        </div>
                        <!-- /.card-header -->
                        <!-- form start -->
                        @using (Html.BeginForm("AddAppointment", "AdminAppointment", FormMethod.Post))
                        {
                            <div class="card-body">
                                <div class="form-group">
                                    @Html.Label("Randevu Tarihi")
                                    @Html.TextBoxFor(x => x.AppointmentDate, new {@type="date",@class = "form-control" })
                                    @Html.ValidationMessageFor(x => x.AppointmentDate, null, new { @style = "color:red;" })
                                </div>
                                <div class="form-group">
                                    @Html.Label("Randevu Durumu")
                                    <select class="form-control" name="AppointmentStatus">
                                        <option value="True">Aktif</option>
                                        <option value="False">Pasif</option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    @Html.Label("Hasta")
                                    @Html.DropDownListFor(x => x.PatientID, (List<SelectListItem>)ViewBag.vlp, new { @class = "form-control" })
                                </div>
                                <div class="form-group">
                                    @Html.Label("Doktor")
                                    @Html.DropDownListFor(x => x.DoctorID, (List<SelectListItem>)ViewBag.vld, new { @class = "form-control" })
                                </div>
                                <div class="form-group mb-0">
                                    <div class="custom-control custom-checkbox">
                                        <input type="checkbox" name="terms" class="custom-control-input">
                                        <label class="custom-control-label">Hizmet şartlarını <a href="#">kabul ediyorum</a>.</label>
                                    </div>
                                </div>

                            </div>
                            <div class="card-footer">
                                <button class="btn btn-primary">Randevu Oluştur</button>
                            </div>
                        }
                    </div>

                    <!-- /.card -->
                </div>

                <!--/.col (left) -->
                <!-- right column -->
                <div class="col-md-6">

                </div>
                <!--/.col (right) -->
            </div>
            <!-- /.row -->
        </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
